<div class="jumbotron jumbotron-fluid">
  <div class="container hero-box">
    <h1 class="display-4">Washington Post Scraped</h1>
    <h2 class="lead">Democracy Dies in Darkness</h2>
  </div>
</div>

<div>

	<div class="no-articles">
		<div class="alert alert-dark" role="alert">
		  You have no articles. Please click <span class="scrape">Scrape New Articles</span> to get some.
		</div>
	</div>
	<div class="articles"></div>
	

</div>

<!-- Modal -->
<div class="modal fade" id="articleModal" tabindex="-1" role="dialog" aria-labelledby="articleModalCenter" aria-hidden="true" id="myModal">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="articleModalCenter"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
			<label for="articleNote">Notes:</label>
			<textarea class="form-control" id="articleNote" rows="3"></textarea>
		</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-outline-dark" id="modalNote" data-dismiss="modal">Save changes</button>
      </div>
    </div>
  </div>
</div>